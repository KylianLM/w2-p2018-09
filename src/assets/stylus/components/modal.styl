.Modal
    display none 
    position fixed 
    z-index 200 
    left 0
    top 0
    width 100% 
    height 100% 
    overflow auto 
    background rgb(255,255,255)
    animation animatetop .4s
    +m(bottom)
        bottom 0
        top auto
        height auto
        animation animatebottom .4s
        +above(3)
            bottom auto
            right 0
            left auto
            top 0
            width 400px
            height 100vh
            animation animateright .4s
        .Modal__content
            width 100%
            height auto
    +m(transparence)
        background rgba(255,255,255,.9)
    +e(content)
        margin 0 auto
        width 90%
        height 100%
        display flex
        flex-direction column
        justify-content center
        +above(3)
            width 30%
            min-width 330px
    +e(title)
        font-size 24 * $px
        color $grey
        line-height 33 * $px
    +e(subtitle)
        font-size 18 * $px
        color rgba($grey, .5)
        line-height 25 * $px
    +e(form)
        width 100%
        margin-top 15 * $margin
    +e(btn)
        margin-top  7 * $margin
        margin-bottom 17 * $margin
    +e(text)
        text-align center
        font-size 14 * $px
        line-height 19 * $px
        
.close
    position absolute
    top 4 * $padding 
    right 4 * $padding
    color #aaa
    font-size: 28 * $px
    font-weight 500
    &:hover, &:focus
        color black
        text-decoration 
        cursor pointer

@keyframes animatetop {
    from {top: -100%; opacity: 0}
    to {top: 0; opacity: 1}
}
@keyframes animatebottom {
    from {bottom: -100%; opacity 0}
    to {bottom: 0%; opacity 1}
}

@keyframes animateright {
    from {right: -100%; opacity 0}
    to {right: 0%; opacity 1}
}